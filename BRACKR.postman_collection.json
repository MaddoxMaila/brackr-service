{
	"info": {
		"_postman_id": "3e384717-4b4d-43cb-a5d1-0e398f4c05fa",
		"name": "BRACKR",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "44382459"
	},
	"item": [
		{
			"name": "CREATE USER",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "x-access-key",
						"value": "{{api_key}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"name\":\"Tshepang\",\r\n    \"email\":\"maila@gmail.com\",\r\n    \"password\":\"maddox\",\r\n    \"type\":\"user\"\r\n\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{host}}/auth/signup",
					"host": [
						"{{host}}"
					],
					"path": [
						"auth",
						"signup"
					]
				}
			},
			"response": []
		},
		{
			"name": "LOGIN USER",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const jsonData = pm.response.json();\r",
							"\r",
							"// Extracting token from response data\r",
							"const token = jsonData.response.token;\r",
							"\r",
							"// Saving the token to environment variable\r",
							"pm.environment.set('authToken', token);\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "apikey"
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"email\":\"maila@gmail.com\",\r\n    \"password\":\"maddox\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{host}}/auth/login",
					"host": [
						"{{host}}"
					],
					"path": [
						"auth",
						"login"
					]
				}
			},
			"response": []
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{authToken}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"exec": [
					"// Use token stored in Postman environment variable\r",
					"let token = pm.environment.get(\"api_key\");\r",
					"\r",
					"pm.request.headers.upsert({\r",
					"    key: \"x-access-key\",\r",
					"    value: token\r",
					"});\r",
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"exec": [
					""
				]
			}
		}
	]
}